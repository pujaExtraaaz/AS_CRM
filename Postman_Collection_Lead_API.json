{
  "info": {
    "name": "Lead API with Fixed Token",
    "description": "API endpoints for creating leads with fixed token authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Lead (Success)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{API_TOKEN}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"title\": \"Mr.\",\n  \"lead_postalcode\": \"12345\",\n  \"opportunity_amount\": 5000,\n  \"status\": 0,\n  \"source\": 1,\n  \"lead_country\": \"USA\",\n  \"lead_state\": \"California\",\n  \"lead_city\": \"Los Angeles\",\n  \"lead_address\": \"123 Main St\",\n  \"website\": \"https://example.com\",\n  \"campaign\": 1,\n  \"industry\": 1,\n  \"description\": \"Potential client from website\",\n  \"account\": 1,\n  \"user_id\": 2\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/leads/create",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "leads",
            "create"
          ]
        },
        "description": "Creates a new lead with all optional fields populated"
      },
      "response": []
    },
